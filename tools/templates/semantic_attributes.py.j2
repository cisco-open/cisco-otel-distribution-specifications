from collections import namedtuple

_SemanticAttribute = namedtuple('_SemanticAttribute', 'key value')

class {{class}}:
    {%- for attribute in attributes | unique(attribute="fqn") %}
    {{attribute.fqn | to_const_name}} = _SemanticAttribute("{{attribute.fqn}}", {{ attribute.sampling_relevant }})
    """
    {{attribute.brief | to_doc_brief}}.

    {%- if attribute.note %}
    Note: {{attribute.note | to_doc_brief}}.
    {%- endif %}

    {%- if attribute.deprecated %}
    Deprecated: {{attribute.deprecated | to_doc_brief}}.
    {%- endif %}
    """
{# Extra line #}
    {%- endfor %}
